<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Integration.Core"
                   namespace="Integration.Core.Model" >

	<class name="Empresa" table="Empresa">

		<id name="Id">
			<generator class="native" />
		</id>

    <property name="Sigla" length="5" not-null="true" />
		<property name="Nome" length="150" not-null="true" />

		<bag name="Filiais" lazy="true" mutable="false" cascade="all" >
			<key column="IdEmpresa" />
			<one-to-many class="Filial" />
		</bag>

		<bag name="Vendas" lazy="true" mutable="false" cascade="none" >
			<key column="IdEmpresa" />
			<one-to-many class="Venda"  />
		</bag>

    <property name="DataAlteracao" not-null="true" />
    <property name="Ativo" not-null="true" />
	</class>
</hibernate-mapping>
