<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Integration.Core"
                   namespace="Integration.Core.Model" >

	<class name="Filial">
    <meta attribute="class-description">Tabela de Filiais</meta>

		<id name="Id">
			<generator class="native" />
		</id>

		<property name="Nome" column="Nome" />

		<bag name="Vendas" lazy="true" mutable="false" access="" cascade="all" >
			<key column="IdFilial" />
			<one-to-many class="Venda"  />
		</bag>

    <bag name="Clientes" lazy="true" mutable="false" access="" cascade="all" >
      <key column="IdFilial" />
      <one-to-many class="Cliente"  />
    </bag>

    <bag name="Terminais" lazy="true" mutable="false" access="" cascade="all" >
      <key column="IdFilial" />
      <one-to-many class="Terminal"  />
    </bag>

		<many-to-one name="Empresa" class="Empresa" column="IdEmpresa" cascade="none" />

    <property name="DataAlteracao" />
    <property name="Ativo" />
		
	</class>
</hibernate-mapping>
